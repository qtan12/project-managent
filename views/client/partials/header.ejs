<!-- Tiki.vn Exact Header -->
<header class="tiki-header">
    <!-- Top Promotional Banner -->
    <div class="promo-banner">
        <div class="container">
            <div class="promo-content">
                <span class="promo-text">Freeship đơn từ 45k, giảm nhiều hơn cùng</span>
                <span class="promo-highlight">FREESHIP XTRA</span>
            </div>
        </div>
    </div>

    <!-- Main Header -->
    <div class="main-header">
        <div class="container">
            <div class="header-content">
                <!-- Logo -->
                <div class="logo-section">
                    <a href="/" class="logo">
                        <div class="logo-text">
                            <span class="logo-t">T</span>
                            <span class="logo-i1">I</span>
                            <span class="logo-k">K</span>
                            <span class="logo-i2">I</span>
                        </div>
                        <div class="logo-slogan">Tốt & Nhanh</div>
                    </a>
                </div>

                <!-- Search Bar -->
                <div class="search-section">
                    <div class="search-container">
                        <div class="search-input-wrapper">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text" class="search-input" placeholder="Freeship đơn từ 45k" autocomplete="off">
                            <button class="search-btn">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Right Actions -->
                <div class="actions-section">
                    <!-- Navigation Links -->
                    <div class="nav-links">
                        <a href="/" class="nav-link">
                            <i class="fas fa-home"></i>
                            <span>Trang chủ</span>
                        </a>
                        <a href="#" class="nav-link">
                            <i class="fas fa-user-circle"></i>
                            <span>Tài khoản</span>
                        </a>
                    </div>

                    <!-- Cart -->
                    <div class="cart-section">
                        <a href="#" class="cart-link">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="cart-badge">0</span>
                        </a>
                    </div>

                    <!-- Delivery Info -->
                    <div class="delivery-info">
                        <i class="fas fa-map-marker-alt"></i>
                        <div class="delivery-text">
                            <span class="delivery-label">Giao đến:</span>
                            <a href="#" class="delivery-link">Bạn muốn giao hàng tới đâu?</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Category Navigation -->
            <div class="category-nav">
                <a href="#" class="category-link">điện gia dụng</a>
                <a href="#" class="category-link">xe cộ</a>
                <a href="#" class="category-link">mẹ & bé</a>
                <a href="#" class="category-link">khỏe đẹp</a>
                <a href="#" class="category-link">nhà cửa</a>
                <a href="#" class="category-link">sách</a>
                <a href="#" class="category-link">thể thao</a>
            </div>
        </div>
    </div>

    <!-- Service Bar -->
    <div class="service-bar">
        <div class="container">
            <div class="service-items">
                <div class="service-item">
                    <i class="fas fa-check-circle"></i>
                    <span>Cam kết</span>
                </div>
                <div class="service-item">
                    <i class="fas fa-check-circle"></i>
                    <span>100% hàng thật</span>
                </div>
                <div class="service-item">
                    <i class="fas fa-truck"></i>
                    <span>Freeship mọi đơn</span>
                </div>
                <div class="service-item">
                    <i class="fas fa-undo"></i>
                    <span>Hoàn 200% nếu hàng giả</span>
                </div>
                <div class="service-item">
                    <i class="fas fa-box"></i>
                    <span>30 ngày đổi trả</span>
                </div>
                <div class="service-item">
                    <i class="fas fa-clock"></i>
                    <span>Giao nhanh 2h</span>
                </div>
                <div class="service-item">
                    <i class="fas fa-tag"></i>
                    <span>Giá siêu rẻ</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile Bottom Menu -->
    <div class="mobile-bottom-menu">
        <div class="bottom-menu-item">
            <a href="/" class="bottom-menu-link">
                <i class="fas fa-home"></i>
                <span>Trang chủ</span>
            </a>
        </div>
        <div class="bottom-menu-item">
            <a href="#" class="bottom-menu-link">
                <i class="fas fa-th-large"></i>
                <span>Danh mục</span>
            </a>
        </div>
        <div class="bottom-menu-item">
            <a href="#" class="bottom-menu-link">
                <i class="fas fa-search"></i>
                <span>Tìm kiếm</span>
            </a>
        </div>
        <div class="bottom-menu-item">
            <a href="#" class="bottom-menu-link">
                <i class="fas fa-shopping-cart"></i>
                <span>Giỏ hàng</span>
                <span class="bottom-menu-badge">3</span>
            </a>
        </div>
        <div class="bottom-menu-item">
            <a href="#" class="bottom-menu-link">
                <i class="fas fa-user"></i>
                <span>Tài khoản</span>
            </a>
        </div>
    </div>
</header>